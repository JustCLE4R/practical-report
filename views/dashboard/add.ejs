<!-- menambah mahasiswa ke kelas kalian -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Tambah Mahasiswa Ke Kelas</title>
</head>
<body style="background: url('/images/uin.png'); background-size: cover; background-attachment: fixed; background-repeat: no-repeat;">
    
  <div class="row justify-content-center align-items-center p-5 mt-5">
    <div class="col-md-4 shadow rounded p-4 bg-light">

      <div class="row text-center border-bottom border-primary mb-2 p-2">
        <h3>Mahasiswa</h3>
      </div>
      <div class="row justify-content-between">
        <div class="col">
          <h6> Nama </h6>
        </div> 
        <div class="col">
          <h6><%= datas.nama %></h6>
        </div>
      </div>
      <div class="row justify-content-between">
        <div class="col">
          <h6> NIM </h6>
        </div> 
        <div class="col">
          <h6><%= datas.nim %></h6>
        </div>
      </div>
    
      <div class="row justify-content-between mb-3">
        <div class="col">
          <h6> Kelas </h6>
        </div> 
        <div class="col">
      <form action="/dashboard/add/<%= datas.nim %>" method="post">
            <select class="form-select" aria-label="Default select example" name="kelas" id="kelas">
              <option selected hidden >Pilih Kelas</option>
              <% admin.kelas.forEach(kelas => { %>
                <option 
                  value="<%= kelas.id %>"
                  <% if (datas.kelas.some(kelasMhs => kelasMhs.id_mk == kelas.id)) { %>disabled<% } %>
                  ><%= kelas.nama + " " + kelas.semester + "/" + kelas.kelas %></option>
              <% }) %>
            </select>
        </div>
      </div>
        <div class="col d-flex flex-row-reverse justify-content-between">
          <button class="btn btn-primary ">Tambah</button>
          <a class="btn btn-secondary float-end" href="/dashboard">Kembali</a>
        </div>
      </form>
    </div>
   
  </div>

  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>