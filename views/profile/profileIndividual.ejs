<% data = datas[0] %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />

    <title>Profile Individu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/profileIndividual.css" />
  </head>
  <body>


    <div class="container mt-1">
      
      <div class="main-body">
        <div class="col mb-3 p-0">
          <a href="/" style="text-decoration: none; " class=" fs-5 p-0"><i class="bi bi-arrow-left-circle"></i>&nbsp;Kembali</a>
        </div>
        <div class="row gutters-sm">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <img
                  <% if(data.role == 'dosen') { %>
                    src="/images/profile/<%= data.role %>/user.png"
                  <% } else { %>
                    src="/images/profile/<%= data.role %>/<%= data.nama %>.jpg"
                  <% } %>
                    alt="Admin"
                    class="rounded-circle"
                    width="150"
                  />
                  <div class="mt-3">
                    <h4><%= data.nama %></h4>
                    <p class="text-secondary mb-1">
                      <% if (data.role == 'aslab') { %>
                        Asisten Laboratorium
                      <% } else if (data.role == 'laboran') { %>
                        Laboran
                      <% } else if (data.role == 'dosen') { %>
                        Dosen
                      <% } %>
                    </p>
                    <p class="text-muted font-size-sm">
                      <%= data.motto %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row pt-2">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Panggilan</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= data.panggilan %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Email</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                    <a
                      target="_blank"
                      href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=<%= data.email %>"
                      ><%= data.email %></a
                    >
                  </div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Nomor Telepon</h6>
                  </div>
                  <div class="col-sm-9 text-secondary"><%= data.notel %></div>
                </div>
                <hr />
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Hobi</h6>
                  </div>
                  <div class="col-sm-9 text-secondary">
                    <%= data.hobi %>
                  </div>
                </div>
                <hr />
                <div class="row pb-2">
                  <div class="col-sm-3">
                    <h6 class="mb-0">Media Sosial</h6>
                  </div>

                  <div class="col-sm-9 text-secondary ">
                    <a class="me-2" target="_blank" href="https://www.instagram.com/<%= data.instagram %>"  target="_blank"><i class="bi bi-instagram"></i> Instagram </a>
                    <a class="me-2" href="https://www.facebook.com/<%= data.facebook %>"  target="_blank"><i class="bi bi-facebook"></i> Facebook </a>
                    <a class="me-2" href="https://wa.me/<%= data.notel.replace(/[\s-]/g, '') %>"  target="_blank"><i class="bi bi-whatsapp"></i> Whatsapp </a>
                  </div>

                </div>

              </div>
            </div>
            


          </div>
        </div>

        <div class="card-body bg-light p-3 justify-content-between">
          <div class="col-12 ">
            <h3>Mata Kuliah yang Ditangani</h3>
            <hr>
          </div>

          <div class="row px-3">
            <div class="col" id="table">
              <table class="table table-hover border">
                <thead class="table-secondary">
                  <tr>
                    <th class="text-center">No</th>
                    <th>Nama Mata Kuliah</th>
                    <th>Semester/Kelas</th>
                    <th class="text-center">Aksi</th>
                  </tr>
                </thead>
                <tbody>

                  <% data.kelas.forEach((kelas, index) => { %>
                  
                  <tr>
                    <th class="text-center"><%= index+1 %></th>
                    <td><%= kelas.nama %></td>
                    <td><%= kelas.semester+"/"+kelas.kelas %></td>
                    <td class="text-center"><span ><a class="btn btn-primary" href="/kelas/<%= kelas.id %>">Lihat</a></span></td>
                  </tr>

                  <% }) %>

                </tbody>
              </table>
            </div>
          </div>
          

        </div>

      </div>
    </div>
    <script
      data-cfasync="false"
      src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"
    ></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="/js/profileindividual.js" type="text/javascript"></script>
  </body>
</html>
