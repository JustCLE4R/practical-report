<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Status Mahasiswa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  </head>
  <body style="background-color: rgb(199, 219, 238);">
    
    <div class="container ">
        <div class="row justify-content-center mt-4 ">
            <div class="col-md-10 bg-light shadow rounded p-4">
                <h3 class="text-center pb-3" style="border-bottom: 1px solid rgb(85, 87, 221);">Status Mahasiswa</h3>
            <div class="row ">
                <div class="col justify-content-between d-flex">
                    <span class="h4">Nama</span>
                    <span class="h4"><%= datas[0].nama %></span>
                </div>
            </div>
            <div class="row ">
                <div class="col justify-content-between d-flex">
                    <span class="h4">Nim</span>
                    <span class="h4"><%= datas[0].nim %></span>
                </div>
            </div>
            </div>
        </div>

        <div class="row justify-content-center mt-4 ">
          <div  class="col-md-10 bg-light  shadow rounded p-4 ">
            <div class="col">
                <div class="dropdown mb-3 float-end">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Keterangan
                    </button>
                    <div style="width: 46vh;" class="dropdown-menu p-2">
                      <div class="row p-2">
                        <li class="p-2"><button class="btn btn-sm btn-secondary"><i class="bi bi-calendar"></i></button> Belum Mengumpul</li>
                        <li class="p-2"><button class="btn btn-sm btn-warning"><i class="bi bi-calendar-x"></i></button> Revisi </li>
                        <li class="p-2"><button class="btn btn-sm btn-primary"><i class="bi bi-calendar2-check-fill"></i></button> Tanda tangan Aslab</li>
                        <li class="p-2"><button class="btn btn-sm btn-success"><i class="bi bi-calendar2-check-fill"></i></button> Tanda tangan Laboran</li>
                      </div>
                    </div>
                </div>
            </div>
            <% datas.forEach(data => { %>
              <div class="col shadow p-3 mb-5 mt-5" >
                  <div class="dropdown mb-3">
                      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                          <%= data.nama_matkul %> | <%= data.semester %>/<%= data.kelas %>
                      </button>
                      <div style="width: 46vh;" class="dropdown-menu p-2">
                        <div class="row">
                          <div class="col-sm-4">
                              <span><b>Dosen</b> </span> <br>
                              <span><b>Laboran</b> </span> <br>
                              <span><b>Aslab</b> </span> <br>
                            </div>
                            <div class="col">
                              <span>: <%= data.nama_dosen %></span><br>
                              <span>: <%= data.nama_laboran %></span><br>
                              <span>: <%= data.nama_aslab %></span><br>
                            </div>
                        </div>
                      </div>
                    </div>

                  <div class="col overflow-auto">
                      <table class="table border table-hover ">
                          <thead>
                            <tr class="text-center">
                              <th scope="col">Modul 1</th>
                              <th scope="col">Modul 2</th>
                              <th scope="col">Modul 3</th>
                              <th scope="col">Modul 4</th>
                              <th scope="col">Modul 5</th>
                              <th scope="col">Modul 6</th>
                              <th scope="col">Modul 7</th>
                              <th scope="col">Modul 8</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr class="text-center">
                              <% for( let index = 1; index <= 8; index++ ) { %>
                              <td><button class="btn fs-3 
                                <% if( data['modul_' + index] == '0' ) { %>
                                  btn-secondary
                                <% } else if (data['modul_' + index] == '1') { %>
                                  btn-warning
                                <% } else if (data['modul_' + index] == '2') { %>
                                  btn-primary
                                <% } else if (data['modul_' + index] == '3') { %>
                                  btn-success
                                <% } %>
                              "><i class="bi
                                <% if( data['modul_' + index] == '0' ) { %>
                                  bi-calendar
                                <% } else if (data['modul_' + index] == '1') { %>
                                  bi-calendar-x
                                <% } else if (data['modul_' + index] == '2') { %>
                                  bi-calendar2-check
                                <% } else if (data['modul_' + index] == '3') { %>
                                  bi-calendar2-check-fill
                                <% } %>
                              "></i></button></td>
                              <% } %>
                              
                            </tr>
                          </tbody>
                      </table>
                  </div>
              </div>
            <% }) %>
          </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>